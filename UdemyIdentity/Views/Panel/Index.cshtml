@model AppUser
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table table-hover">
    <tr>
        <th>Kullanıcı Adı</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Kullanıcı Soyadı</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Telefon</th>
        <td>@Model.PhoneNumber</td>
    </tr>
</table>
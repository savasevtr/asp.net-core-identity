@model RoleEditViewModel
@{
    ViewData["Title"] = "Rol Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Rol Düzenle</h4>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <a asp-action="Index" asp-controller="Role" class="btn btn-info btn-sm my-2">Roller</a>

            <form asp-action="Edit" asp-controller="Role" method="post" class="w-50 shadow p-3">

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <button type="submit" class="btn btn-success btn-sm">Güncelle</button>

            </form>

        </div>
    </div>
</div>


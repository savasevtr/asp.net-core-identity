@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kullanıcı Rolleri</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <form asp-action="AssignRole" asp-controller="Role" method="post" class="shadow w-75 p-3">


                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">

                        <input type="hidden" asp-for="@Model[i].RoleId" />

                        <input type="hidden" asp-for="@Model[i].Name" />

                        <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exists" />

                        <label class="form-check-label" for="@Model[i].Name">
                            @Model[i].Name
                        </label>

                    </div>
                }

                <input type="submit" class="btn btn-outline-success btn-sm mt-3" value="Kaydet" />

            </form>

        </div>
    </div>
</div>